
#flash-container.large-3.small-centered.columns{style: "margin-top: 20px"}
  - if flash[:notice]
    .success.callout{"data-closable"=> ""}
      = flash[:notice]
      %button.close-button{"aria-label" => "Dismiss alert", "type" => "button", "data-close"=> ""} 
        %span{"aria-hidden" => "true"}
          &times;
      - flash[:notice] = nil

  - if flash[:alert]
    .callout{"data-closable"=> ""}
      = flash[:alert]
      %button.close-button{"aria-label" => "Dismiss alert", "type" => "button", "data-close"=> ""} 
        %span{"aria-hidden" => "true"}
          &times;
      - flash[:alert] = nil

  - if flash[:error] && !flash[:error].empty?
    .callout{"data-closable"=> ""}
      = flash[:error]
      %button.close-button{"aria-label" => "Dismiss alert", "type" => "button", "data-close"=> ""} 
        %span{"aria-hidden" => "true"}
          &times;
      - flash[:error] = nil